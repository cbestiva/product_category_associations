<h1><%= @product.name %></h1>
<p><%= @product.price %></p>
<p><%= @product.description %></p>
<%= link_to "Edit", edit_product_path(@product), method: 'get' %> 
<%= link_to "Delete", product_path(@product), method: 'delete' %>

<h3>Categories:</h3>

<% @categories.each do |c| %>
	<li><%= link_to c.name, category_path(c) %></li>
<% end %>
